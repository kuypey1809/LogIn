<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/imageFoodStore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="54dp"
        android:contentDescription="@string/food_store1"
        app:srcCompat="@drawable/food_store"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/imageFoodStore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageFoodStore1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:contentDescription="@string/food_store2"
        app:srcCompat="@drawable/food_store"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageCanteen1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/imageFoodStore1"
        android:layout_alignRight="@+id/imageFoodStore1"
        android:layout_below="@+id/imageFoodStore1"
        android:layout_marginTop="67dp"
        android:contentDescription="@string/canteen1"
        app:srcCompat="@drawable/canteen"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageCanteen2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/imageFoodStore2"
        android:layout_alignRight="@+id/imageFoodStore2"
        android:layout_alignTop="@+id/imageCanteen1"
        android:contentDescription="@string/canteen2"
        app:srcCompat="@drawable/canteen"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageVendingMachine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageCanteen1"
        android:layout_alignStart="@+id/imageCanteen1"
        android:layout_below="@+id/imageCanteen1"
        android:layout_marginTop="97dp"
        android:contentDescription="@string/vending_machine1"
        app:srcCompat="@drawable/vending_machine"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageVendingMachine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageVendingMachine1"
        android:layout_alignEnd="@+id/imageCanteen2"
        android:layout_alignRight="@+id/imageCanteen2"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:contentDescription="@string/vending_machine2"
        android:visibility="invisible"
        app:srcCompat="@drawable/vending_machine" />
</RelativeLayout>
